{
	"name": "nest-template",
	"version": "1.0.0",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"bootstrap": "npm i --legacy-peer-deps",
		"prebuild": "rimraf dist",
		"build": "nest build",
		"prebundle": "rimraf build",
		"bundle": "ncc build --no-cache --target es2015 dist/main.js -o build -m",
		"postbundle": "node ./scripts/postbundle.js",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"dev": "nest start --watch",
		"docker:dev": "docker-compose -f docker-compose.dev.yaml up -d",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "NODE_ENV=e2e jest --runInBand --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/cli": "^10.1.18",
		"@nestjs/common": "^10.2.6",
		"@nestjs/config": "^3.1.1",
		"@nestjs/core": "^10.2.6",
		"@nestjs/jwt": "^10.1.1",
		"@nestjs/mapped-types": "2.0.2",
		"@nestjs/passport": "^10.0.2",
		"@nestjs/platform-express": "^10.2.6",
		"@nestjs/swagger": "^7.1.12",
		"@nestjs/typeorm": "~10.0.0",
		"bcryptjs": "^2.4.3",
		"chalk": "^4.1.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"lodash": "^4.17.21",
		"mysql2": "^2.3.3",
		"nacos": "^2.5.1",
		"nestjs-i18n": "^10.3.5",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.1",
		"reflect-metadata": "^0.1.13",
		"remove": "^0.1.5",
		"rimraf": "^5.0.5",
		"rxjs": "^7.8.1",
		"swagger-ui-express": "^5.0.0",
		"typeorm": "~0.3.17",
		"typescript": "^5.2.2"
	},
	"devDependencies": {
		"@nestjs/schematics": "^10.0.2",
		"@nestjs/testing": "^10.2.6",
		"@types/bcryptjs": "^2.4.4",
		"@types/express": "^4.17.18",
		"@types/jest": "29.5.5",
		"@types/lodash": "^4.14.199",
		"@types/node": "^18.18.0",
		"@types/passport-jwt": "^3.0.10",
		"@types/supertest": "^2.0.13",
		"@typescript-eslint/eslint-plugin": "^6.7.3",
		"@typescript-eslint/parser": "^6.7.3",
		"@vercel/ncc": "^0.38.0",
		"eslint": "^8.50.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-prettier": "^5.0.0",
		"jest": "29.7.0",
		"prettier": "^3.0.3",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "29.1.1",
		"ts-loader": "^9.4.4",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "4.2.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/../src/$1"
		}
	}
}
